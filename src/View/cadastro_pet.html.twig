{% extends 'base.html.twig' %}
{% block title %}Cadastro Pet{% endblock %}
{% block body %}
    <div id="call-to-action">
        <div class="container">
            <div class="row text-center">
                <h2>PetCare - Cadastrar Pet</h2>
                <hr>
                <br>
            </div><!-- /row /text-center-->
            <div class="text-center">
                <div class="row row-max-400">
                    <form class="form-horizontal"  action="/cadastrar_pet" method="POST">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Nome</label>
                            <div class="col-sm-10">
                                <input name="nome" type="text" class="form-control" placeholder="Pirata">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Born</label>
                            <div class="col-sm-10">
                                <input name="nascimento" type="date" class="form-control" placeholder="ANO/MES/DIA">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Ra√ßa</label>
                            <div class="col-sm-10">
                                <input name="raca" type="text" class="form-control" placeholder="Border Collie">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-success">Cadastrar</button>
                            </div>
                        </div>
                    </form>
                </div><!-- /row /row-max-400 -->
            </div><!-- /text-center -->
        </div><!-- /container -->
    </div><!-- /call-to-action -->
{% endblock %}

