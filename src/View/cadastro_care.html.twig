{% extends 'base.html.twig' %}
{% block title %}Cadastro Care{% endblock %}
{% block body %}
    <div id="call-to-action">
        <div class="container">
            <div class="row text-center">
                <h2>Cadastrar Evento Para {{pet.nome}}</h2>
                <hr>
                <br>
            </div><!-- /row /text-center-->
            <div class="text-center">
                <div class="row row-max-400">
                    <form class="form-horizontal"  action="/cadastrar_care/{{pet.idPet}}" method="POST">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Tipo</label>
                            <div class="col-sm-10">
                                <input name="tipo" type="text" class="form-control" placeholder="Consulta">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Data</label>
                            <div class="col-sm-10">
                                <input name="data" type="date" class="form-control" placeholder="ANO/MES/DIA">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Descrição</label>
                            <div class="col-sm-10">
                                <input name="descricao" type="text" class="form-control" placeholder="Consulta de rotina...">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-success">Cadastrar</button>
                            </div>
                        </div>
                    </form>
                </div><!-- /row /row-max-400 -->
            </div><!-- /text-center -->
        </div><!-- /container -->
    </div><!-- /call-to-action -->
{% endblock %}

