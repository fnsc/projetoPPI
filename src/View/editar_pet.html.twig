{% extends 'base.html.twig' %}

{% block title %}Editar {{pet.nome}} {% endblock %}
{% block body %}
    <div id="call-to-action">
        <div class="container">
            <div class="row text-center">
                <h2>PetCare - EDITAR PET</h2>
                <hr>
                <br>
            </div><!-- /row /text-center-->
            <div class="text-center">
                <div class="row row-max-400">
                    <form class="form-horizontal" action="/editar_pet/{{pet.idPet}}" method="POST">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">Nome</label>
                            <div class="col-sm-10">
                                <input name="nome" type="text" class="form-control" placeholder="seudominio@seuservidor.com" id="nome" value="{{pet.nome}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Born</label>
                            <div class="col-sm-10">
                                <input name="nascimento" type="date" class="form-control" placeholder="ANO/MES/DIA" id="nascimento" value="{{pet.nascimento}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Ra√ßa</label>
                            <div class="col-sm-10">
                                <input name="raca" type="text" class="form-control" placeholder="Border Collie" id="raca" value="{{pet.raca}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-success">Atualizar</button>
                            </div>
                        </div>
                    </form><!-- formEdicao -->
                </div><!-- /row /row-max-400 -->
            </div><!-- /text-center -->
        </div><!-- /container -->
    </div><!-- /call-to-action -->
{% endblock %}

